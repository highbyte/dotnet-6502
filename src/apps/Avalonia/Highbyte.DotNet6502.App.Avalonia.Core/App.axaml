<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Highbyte.DotNet6502.App.Avalonia.Core"
             x:Class="Highbyte.DotNet6502.App.Avalonia.Core.App"
             RequestedThemeVariant="Dark">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <!-- Application-wide resource colors -->
    <!-- 80s Sci-Fi muted color palette -->
    <Application.Resources>
        <SolidColorBrush x:Key="PrimaryBg">#1A2332</SolidColorBrush>
        <SolidColorBrush x:Key="SecondaryBg">#2A3544</SolidColorBrush>
        <SolidColorBrush x:Key="AccentBg">#3A4556</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryText">#E8EEF5</SolidColorBrush>
        <SolidColorBrush x:Key="SecondaryText">#8B9BB0</SolidColorBrush>
        <SolidColorBrush x:Key="HighlightGold">#B8A876</SolidColorBrush>
        <SolidColorBrush x:Key="AccentBlue">#6B8CAE</SolidColorBrush>
        <SolidColorBrush x:Key="SuccessColor">#5B8A7D</SolidColorBrush>
        <SolidColorBrush x:Key="WarningColor">#B89D5F</SolidColorBrush>
        <SolidColorBrush x:Key="DangerColor">#A85E5E</SolidColorBrush>
        <SolidColorBrush x:Key="BorderColor">#4A5566</SolidColorBrush>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />

        <!-- Override FluentTheme default colors -->
        <Style Selector="Window">
            <Setter Property="Background" Value="{DynamicResource PrimaryBg}"/>
        </Style>

        <!-- Typography Styles -->
        <Style Selector="TextBlock.h1">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource HighlightGold}"/>
        </Style>

        <Style Selector="TextBlock.h2">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

        <Style Selector="TextBlock.h3">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

        <Style Selector="TextBlock.body">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

        <Style Selector="TextBlock.body-light">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
        </Style>

        <Style Selector="TextBlock.small">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
        </Style>

        <Style Selector="TextBlock.small-bold">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

        <Style Selector="TextBlock.tiny">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

        <Style Selector="TextBlock.tiny-bold">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

        <Style Selector="TextBlock.label">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentBlue}"/>
        </Style>

        <Style Selector="TextBlock.success">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource SuccessColor}"/>
        </Style>

        <Style Selector="TextBlock.warning">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource WarningColor}"/>
        </Style>

        <Style Selector="TextBlock.error">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource DangerColor}"/>
        </Style>

        <Style Selector="TextBlock.monospace">
            <Setter Property="FontFamily" Value="Consolas,Monaco,'Courier New',monospace"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentBlue}"/>
        </Style>

        <!-- Status text styling -->
        <Style Selector="TextBlock.status">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

        <!-- Section headers in panels -->
        <Style Selector="TextBlock.section-header">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource HighlightGold}"/>
            <Setter Property="Margin" Value="0,20,0,5"/>
        </Style>

        <!-- Field labels -->
        <Style Selector="TextBlock.field-label">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
        </Style>

        <!-- Help text -->
        <Style Selector="TextBlock.help-text">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Italic overlay text -->
        <Style Selector="TextBlock.overlay">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
        </Style>

        <!-- TextBox Styles - Matching TextBlock label styles -->

        <!-- Default TextBox style -->
        <Style Selector="TextBox">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="CornerRadius" Value="2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource SecondaryBg}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
        </Style>

        <Style Selector="TextBox:focus">
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBlue}"/>
        </Style>

        <Style Selector="TextBox:pointerover">
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBlue}"/>
        </Style>

        <!-- TextBox matching h1 size (20px) -->
        <Style Selector="TextBox.h1">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="Foreground" Value="{DynamicResource HighlightGold}"/>
        </Style>

        <!-- TextBox matching h2 size (16px) -->
        <Style Selector="TextBox.h2">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,7"/>
            <Setter Property="MinHeight" Value="38"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

        <!-- TextBox matching h3 size (14px) -->
        <Style Selector="TextBox.h3">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="9,6"/>
            <Setter Property="MinHeight" Value="34"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

        <!-- TextBox matching body size (12px) -->
        <Style Selector="TextBox.body">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

        <!-- TextBox matching small size (11px) -->
        <Style Selector="TextBox.small">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
        </Style>

        <!-- TextBox matching tiny size (10px) -->
        <Style Selector="TextBox.tiny">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="MinHeight" Value="26"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

        <!-- TextBox matching label size (12px) -->
        <Style Selector="TextBox.label">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentBlue}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- TextBox matching field-label size (12px) -->
        <Style Selector="TextBox.field-label">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- TextBox matching help-text size (12px) -->
        <Style Selector="TextBox.help-text">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
        </Style>

        <!-- TextBox matching monospace style -->
        <Style Selector="TextBox.monospace">
            <Setter Property="FontFamily" Value="Consolas,Monaco,'Courier New',monospace"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentBlue}"/>
        </Style>

        <!-- TextBox matching status size (12px) -->
        <Style Selector="TextBox.status">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

        <!-- TextBox matching section-header size (12px) -->
        <Style Selector="TextBox.section-header">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Foreground" Value="{DynamicResource HighlightGold}"/>
        </Style>

        <!-- TextBox for large input -->
        <Style Selector="TextBox.large">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="MinHeight" Value="38"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

        <!-- TextBox for compact spaces -->
        <Style Selector="TextBox.compact">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="MinHeight" Value="26"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

        <!-- Field-aligned TextBox -->
        <Style Selector="TextBox.field-aligned">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="MinHeight" Value="26"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Button Styles -->

        <!-- Default button style -->
        <Style Selector="Button">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="CornerRadius" Value="2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="{DynamicResource SecondaryBg}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
        </Style>

        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="{DynamicResource AccentBg}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBlue}"/>
        </Style>

        <Style Selector="Button:pressed">
            <Setter Property="Background" Value="{DynamicResource PrimaryBg}"/>
        </Style>

        <!-- Grid button style - for buttons that should fill grid cells -->
        <Style Selector="Button.grid">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="MinWidth" Value="0"/>
        </Style>

        <!-- Wide buttons for longer button text -->
        <Style Selector="Button.wide">
            <Setter Property="Width" Value="120"/>
        </Style>
        <Style Selector="Button.extraWide">
            <Setter Property="Width" Value="180"/>
        </Style>

        <!-- Primary action buttons (Start, Save, etc.) -->
        <Style Selector="Button.primary">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="{DynamicResource SuccessColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="BorderBrush" Value="#4A6D62"/>
        </Style>

        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="#6B9F8F"/>
            <Setter Property="BorderBrush" Value="{DynamicResource HighlightGold}"/>
        </Style>

        <!-- Secondary action buttons (Pause, Reset, etc.) -->
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="{DynamicResource AccentBlue}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="BorderBrush" Value="#5A7C9E"/>
        </Style>

        <Style Selector="Button.secondary:pointerover">
            <Setter Property="Background" Value="#7B9CBE"/>
            <Setter Property="BorderBrush" Value="{DynamicResource HighlightGold}"/>
        </Style>

        <!-- Warning action buttons (Pause, Stop, etc.) -->
        <Style Selector="Button.warning">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Background" Value="{DynamicResource WarningColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="BorderBrush" Value="#A88D4F"/>
        </Style>

        <Style Selector="Button.warning:pointerover">
            <Setter Property="Background" Value="#C8AD6F"/>
            <Setter Property="BorderBrush" Value="{DynamicResource HighlightGold}"/>
        </Style>

        <!-- Danger action buttons (Stop, Delete, etc.) -->
        <Style Selector="Button.danger">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Background" Value="{DynamicResource DangerColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="BorderBrush" Value="#984E4E"/>
        </Style>

        <Style Selector="Button.danger:pointerover">
            <Setter Property="Background" Value="#B86E6E"/>
            <Setter Property="BorderBrush" Value="{DynamicResource WarningColor}"/>
        </Style>

        <!-- Small buttons for compact spaces -->
        <Style Selector="Button.small">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinHeight" Value="28"/>
        </Style>

        <!-- Large buttons for important actions -->
        <Style Selector="Button.large">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="MinHeight" Value="44"/>
        </Style>

        <!-- Compact buttons with minimal padding -->
        <Style Selector="Button.compact">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="MinHeight" Value="24"/>
        </Style>

        <!-- Text-only buttons (no background) -->
        <Style Selector="Button.text">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentBlue}"/>
        </Style>

        <Style Selector="Button.text:pointerover">
            <Setter Property="Foreground" Value="{DynamicResource HighlightGold}"/>
        </Style>

        <!-- Information buttons (i icon buttons) -->
        <Style Selector="Button.info">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="MinWidth" Value="16"/>
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="{DynamicResource AccentBg}"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ToolTip.Tip" Value="Open link"/>
        </Style>

        <!-- Information button hover effects -->
        <Style Selector="Button.info:pointerover">
            <Setter Property="Background" Value="{DynamicResource SecondaryBg}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBlue}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

        <Style Selector="Button.info:pressed">
            <Setter Property="Background" Value="{DynamicResource PrimaryBg}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBlue}"/>
        </Style>

        <!-- Cancel/dismiss buttons -->
        <Style Selector="Button.cancel">
            <Setter Property="Background" Value="{DynamicResource AccentBg}"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
        </Style>

        <Style Selector="Button.cancel:pointerover">
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBlue}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

        <!-- ComboBox Styles -->

        <!-- Default ComboBox style -->
        <Style Selector="ComboBox">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="CornerRadius" Value="2"/>
            <Setter Property="Background" Value="{DynamicResource SecondaryBg}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
        </Style>

        <Style Selector="ComboBox:pointerover /template/ Border#Background">
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBlue}"/>
        </Style>

        <Style Selector="ComboBox:focus /template/ Border#Background">
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBlue}"/>
        </Style>

        <!-- Small ComboBox for compact spaces -->
        <Style Selector="ComboBox.small">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="4,3"/>
            <Setter Property="MinHeight" Value="24"/>
        </Style>

        <!-- Large ComboBox for important selections -->
        <Style Selector="ComboBox.large">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="MinHeight" Value="38"/>
        </Style>

        <!-- Compact ComboBox with minimal padding -->
        <Style Selector="ComboBox.compact">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="MinHeight" Value="22"/>
        </Style>

        <!-- Field-aligned ComboBox to match field-label TextBlocks -->
        <Style Selector="ComboBox.field-aligned">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="MinHeight" Value="26"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- ComboBox item text styling -->
        <Style Selector="ComboBox TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
        </Style>

        <Style Selector="ComboBox.small TextBlock">
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <Style Selector="ComboBox.large TextBlock">
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style Selector="ComboBox.compact TextBlock">
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <Style Selector="ComboBox.field-aligned TextBlock">
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- TabItem Styles -->

        <!-- Compact TabItem style for smaller headers -->
        <Style Selector="TabItem">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="4,2"/>
        </Style>

        <!-- CheckBox Styles -->

        <!-- Default CheckBox style -->
        <Style Selector="CheckBox">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

        <Style Selector="CheckBox /template/ Border#NormalRectangle">
            <Setter Property="Background" Value="{DynamicResource SecondaryBg}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
        </Style>

        <Style Selector="CheckBox:pointerover /template/ Border#NormalRectangle">
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBlue}"/>
        </Style>

        <Style Selector="CheckBox:checked /template/ Border#NormalRectangle">
            <Setter Property="Background" Value="{DynamicResource AccentBlue}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBlue}"/>
        </Style>

        <Style Selector="CheckBox:checked:pointerover /template/ Border#NormalRectangle">
            <Setter Property="Background" Value="#7B9CBE"/>
            <Setter Property="BorderBrush" Value="{DynamicResource HighlightGold}"/>
        </Style>

        <!-- Field-aligned CheckBox to match field-label TextBlocks -->
        <Style Selector="CheckBox.field-aligned">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
        </Style>

        <!-- Small CheckBox for compact spaces -->
        <Style Selector="CheckBox.small">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
        </Style>

        <!-- Large CheckBox for important selections -->
        <Style Selector="CheckBox.large">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

        <!-- Slider Styles -->
        <Style Selector="Slider">
            <Setter Property="Foreground" Value="{DynamicResource AccentBlue}"/>
        </Style>

        <Style Selector="Slider /template/ Thumb">
            <Setter Property="Background" Value="{DynamicResource HighlightGold}"/>
        </Style>

        <Style Selector="Slider /template/ Thumb:pointerover">
            <Setter Property="Background" Value="#C8B886"/>
        </Style>

        <!-- Compact Slider style with smaller thumb -->
        <Style Selector="Slider.compact /template/ Thumb">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
        </Style>

        <!-- Border Styles -->
        <Style Selector="Border">
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
        </Style>

        <!-- Panel/Container backgrounds -->
        <Style Selector="Panel">
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <!-- Expander item text styling -->
        <Style Selector="Expander">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
        </Style>

        <Style Selector="Expander /template/ ToggleButton">
            <Setter Property="Background" Value="{DynamicResource SecondaryBg}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
        </Style>

        <Style Selector="Expander /template/ ToggleButton:pointerover">
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBlue}"/>
        </Style>
    </Application.Styles>
</Application>