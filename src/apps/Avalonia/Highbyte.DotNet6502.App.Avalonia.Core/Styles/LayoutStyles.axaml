<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ========================================== -->
    <!-- BORDER CONTAINER STYLES                    -->
    <!-- ========================================== -->
    
    <!-- Default Border style -->
    <Style Selector="Border">
        <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
    </Style>

    <!-- Panel container - used for main panels/sections -->
    <Style Selector="Border.panel-container">
        <Setter Property="Background" Value="#2D3748"/>
        <Setter Property="BorderBrush" Value="#4A5568"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="10"/>
    </Style>

    <!-- Section container - used for content sections -->
    <Style Selector="Border.section-container">
        <Setter Property="Background" Value="{DynamicResource SecondaryBg}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="2"/>
    </Style>

    <!-- Content section - used for configuration sections -->
    <Style Selector="Border.content-section">
        <Setter Property="Background" Value="#252F3F"/>
        <Setter Property="BorderBrush" Value="#4A5568"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="6"/>
    </Style>

    <!-- Tab content border -->
    <Style Selector="Border.tab-content">
        <Setter Property="Background" Value="#2D3748"/>
        <Setter Property="Padding" Value="4"/>
    </Style>

    <!-- Collapsible section content -->
    <Style Selector="Border.collapsible-content">
        <Setter Property="Background" Value="#2D3748"/>
        <Setter Property="BorderThickness" Value="1,0,1,1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"/>
        <Setter Property="Padding" Value="8"/>
    </Style>

    <!-- Error/validation border -->
    <Style Selector="Border.error-container">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="#E53E3E"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="10"/>
    </Style>

    <Style Selector="Border.error-container-compact">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="#E53E3E"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="6"/>
    </Style>

    <!-- Status container -->
    <Style Selector="Border.status-container">
        <Setter Property="Background" Value="#252F3F"/>
        <Setter Property="BorderBrush" Value="#4A5568"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
    </Style>

    <!-- Statistics container -->
    <Style Selector="Border.stats-container">
        <Setter Property="Background" Value="#4A5568"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <!-- ========================================== -->
    <!-- STACKPANEL SPACING STYLES                  -->
    <!-- ========================================== -->
    
    <Style Selector="StackPanel.spacing-tight">
        <Setter Property="Spacing" Value="2"/>
    </Style>

    <Style Selector="StackPanel.spacing-small">
        <Setter Property="Spacing" Value="4"/>
    </Style>

    <Style Selector="StackPanel.spacing-medium">
        <Setter Property="Spacing" Value="6"/>
    </Style>

    <Style Selector="StackPanel.spacing-normal">
        <Setter Property="Spacing" Value="8"/>
    </Style>

    <Style Selector="StackPanel.spacing-large">
        <Setter Property="Spacing" Value="10"/>
    </Style>

    <!-- Wrap item for WrapPanel - removed inline margin in favor of using .margin-right-medium .margin-bottom-medium classes -->
    <Style Selector="StackPanel.wrap-item">
        <Setter Property="Margin" Value="0,0,8,8"/>
    </Style>

    <!-- ========================================== -->
    <!-- GRID SPACING STYLES                        -->
    <!-- ========================================== -->
    
    <Style Selector="Grid.spacing-tight">
        <Setter Property="ColumnSpacing" Value="4"/>
        <Setter Property="RowSpacing" Value="4"/>
    </Style>

    <Style Selector="Grid.spacing-small">
        <Setter Property="ColumnSpacing" Value="6"/>
        <Setter Property="RowSpacing" Value="6"/>
    </Style>

    <Style Selector="Grid.spacing-normal">
        <Setter Property="ColumnSpacing" Value="8"/>
        <Setter Property="RowSpacing" Value="8"/>
    </Style>

    <Style Selector="Grid.spacing-medium">
        <Setter Property="ColumnSpacing" Value="8"/>
        <Setter Property="RowSpacing" Value="8"/>
    </Style>

    <Style Selector="Grid.spacing-wide">
        <Setter Property="ColumnSpacing" Value="12"/>
        <Setter Property="RowSpacing" Value="12"/>
    </Style>

    <!-- ========================================== -->
    <!-- SCROLLVIEWER STYLES                        -->
    <!-- ========================================== -->
    
    <Style Selector="ScrollViewer.auto-scroll">
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
    </Style>

    <Style Selector="ScrollViewer.vertical-only">
        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
    </Style>

    <Style Selector="ScrollViewer.horizontal-only">
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Disabled"/>
    </Style>

    <!-- ========================================== -->
    <!-- PANEL STYLES                               -->
    <!-- ========================================== -->
    
    <Style Selector="Panel">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

</Styles>
