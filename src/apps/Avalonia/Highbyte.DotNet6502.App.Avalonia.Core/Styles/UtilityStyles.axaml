<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ========================================== -->
    <!-- CONTROL ALIGNMENT UTILITIES                -->
    <!-- ========================================== -->
    
    <!-- Vertical alignment -->
    <Style Selector=":is(Control).v-center">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style Selector=":is(Control).v-top">
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <Style Selector=":is(Control).v-bottom">
        <Setter Property="VerticalAlignment" Value="Bottom"/>
    </Style>

    <Style Selector=":is(Control).v-stretch">
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

    <!-- Horizontal alignment -->
    <Style Selector=":is(Control).h-center">
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style Selector=":is(Control).h-left">
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <Style Selector=":is(Control).h-right">
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>

    <Style Selector=":is(Control).h-stretch">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

</Styles>
