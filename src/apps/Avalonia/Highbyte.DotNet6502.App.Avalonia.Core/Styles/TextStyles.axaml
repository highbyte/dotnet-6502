<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ========================================== -->
    <!-- TEXTBLOCK SIZE STYLES                      -->
    <!-- ========================================== -->
    
    <Style Selector="TextBlock.h1">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource HighlightGold}"/>
    </Style>

    <Style Selector="TextBlock.h2">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
    </Style>

    <Style Selector="TextBlock.h3">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
    </Style>

    <Style Selector="TextBlock.body">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
    </Style>

    <Style Selector="TextBlock.small">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
    </Style>

    <Style Selector="TextBlock.tiny">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
    </Style>

    <!-- ========================================== -->
    <!-- TEXTBLOCK WEIGHT STYLES                    -->
    <!-- ========================================== -->
    
    <Style Selector="TextBlock.bold">
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style Selector="TextBlock.normal-weight">
        <Setter Property="FontWeight" Value="Normal"/>
    </Style>

    <!-- ========================================== -->
    <!-- TEXTBLOCK SEMANTIC COLOR STYLES            -->
    <!-- ========================================== -->
    
    <Style Selector="TextBlock.primary-text">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
    </Style>

    <Style Selector="TextBlock.secondary-text">
        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
    </Style>

    <Style Selector="TextBlock.accent-blue">
        <Setter Property="Foreground" Value="{DynamicResource AccentBlue}"/>
    </Style>

    <Style Selector="TextBlock.highlight-gold">
        <Setter Property="Foreground" Value="{DynamicResource HighlightGold}"/>
    </Style>

    <Style Selector="TextBlock.success">
        <Setter Property="Foreground" Value="{DynamicResource SuccessColor}"/>
    </Style>

    <Style Selector="TextBlock.warning">
        <Setter Property="Foreground" Value="{DynamicResource WarningColor}"/>
    </Style>

    <Style Selector="TextBlock.error">
        <Setter Property="Foreground" Value="{DynamicResource DangerColor}"/>
    </Style>

    <!-- ========================================== -->
    <!-- TEXTBLOCK ADDITIONAL COLOR STYLES          -->
    <!-- ========================================== -->
    
    <Style Selector="TextBlock.error-bullet">
        <Setter Property="Foreground" Value="#E53E3E"/>
    </Style>

    <Style Selector="TextBlock.muted">
        <Setter Property="Foreground" Value="#888888"/>
    </Style>

    <Style Selector="TextBlock.dimmed">
        <Setter Property="Foreground" Value="#A0AEC0"/>
    </Style>

    <Style Selector="TextBlock.white">
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style Selector="TextBlock.success-text">
        <Setter Property="Foreground" Value="{DynamicResource SuccessColor}"/>
    </Style>

    <Style Selector="TextBlock.warning-text">
        <Setter Property="Foreground" Value="{DynamicResource WarningColor}"/>
    </Style>

    <Style Selector="TextBlock.error-text">
        <Setter Property="Foreground" Value="{DynamicResource DangerColor}"/>
    </Style>

    <!-- ========================================== -->
    <!-- TEXTBLOCK SPECIAL PURPOSE STYLES           -->
    <!-- ========================================== -->
    
    <Style Selector="TextBlock.label">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource AccentBlue}"/>
    </Style>

    <Style Selector="TextBlock.label-small">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource AccentBlue}"/>
    </Style>

    <Style Selector="TextBlock.field-label">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
    </Style>

    <Style Selector="TextBlock.section-header">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource HighlightGold}"/>
        <Setter Property="Margin" Value="0,20,0,5"/>
    </Style>

    <Style Selector="TextBlock.status">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
    </Style>

    <Style Selector="TextBlock.help-text">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style Selector="TextBlock.overlay">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
    </Style>

    <Style Selector="TextBlock.monospace">
        <Setter Property="FontFamily" Value="Consolas,Monaco,'Courier New',monospace"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{DynamicResource AccentBlue}"/>
    </Style>

    <!-- ========================================== -->
    <!-- TEXTBLOCK LOG SEVERITY STYLES              -->
    <!-- ========================================== -->
    
    <Style Selector="TextBlock.log-trace">
        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
    </Style>

    <Style Selector="TextBlock.log-debug">
        <Setter Property="Foreground" Value="{DynamicResource AccentBlue}"/>
    </Style>

    <Style Selector="TextBlock.log-info">
        <Setter Property="Foreground" Value="{DynamicResource SuccessColor}"/>
    </Style>

    <Style Selector="TextBlock.log-warning">
        <Setter Property="Foreground" Value="{DynamicResource WarningColor}"/>
    </Style>

    <Style Selector="TextBlock.log-error">
        <Setter Property="Foreground" Value="{DynamicResource DangerColor}"/>
    </Style>

    <Style Selector="TextBlock.log-critical">
        <Setter Property="Foreground" Value="{DynamicResource DangerColor}"/>
    </Style>

    <!-- ========================================== -->
    <!-- TEXTBLOCK ALIGNMENT STYLES                 -->
    <!-- ========================================== -->
    
    <Style Selector="TextBlock.v-center">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style Selector="TextBlock.h-center">
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- ========================================== -->
    <!-- TEXTBLOCK MARGIN STYLES                    -->
    <!-- ========================================== -->
    
    <Style Selector="TextBlock.label-spacing">
        <Setter Property="Margin" Value="0,0,8,0"/>
    </Style>

    <Style Selector="TextBlock.item-spacing">
        <Setter Property="Margin" Value="0,2"/>
    </Style>

    <!-- ========================================== -->
    <!-- SELECTABLE TEXTBLOCK STYLES                -->
    <!-- ========================================== -->
    
    <Style Selector="SelectableTextBlock.small">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
    </Style>

    <Style Selector="SelectableTextBlock.tiny">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
    </Style>

    <Style Selector="SelectableTextBlock.bold">
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style Selector="SelectableTextBlock.monospace">
        <Setter Property="FontFamily" Value="Consolas,Monaco,'Courier New',monospace"/>
    </Style>

</Styles>
