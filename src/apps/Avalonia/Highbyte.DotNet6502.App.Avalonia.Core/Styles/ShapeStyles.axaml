<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- ========================================== -->
    <!-- CORNER RADIUS STYLES                       -->
    <!-- ========================================== -->
    
    <!-- No rounding -->
    <Style Selector="Border.radius-none">
        <Setter Property="CornerRadius" Value="0"/>
    </Style>

    <!-- Small rounding - 4 pixels -->
    <Style Selector="Border.radius-small">
        <Setter Property="CornerRadius" Value="4"/>
    </Style>
    
    <Style Selector="Border.radius-small-top">
        <Setter Property="CornerRadius" Value="4,4,0,0"/>
    </Style>
    
    <Style Selector="Border.radius-small-bottom">
        <Setter Property="CornerRadius" Value="0,0,4,4"/>
    </Style>

    <!-- Medium rounding - 6 pixels -->
    <Style Selector="Border.radius-medium">
        <Setter Property="CornerRadius" Value="6"/>
    </Style>
    
    <Style Selector="Border.radius-medium-top">
        <Setter Property="CornerRadius" Value="6,6,0,0"/>
    </Style>
    
    <Style Selector="Border.radius-medium-bottom">
        <Setter Property="CornerRadius" Value="0,0,6,6"/>
    </Style>

    <!-- Large rounding - 8 pixels -->
    <Style Selector="Border.radius-large">
        <Setter Property="CornerRadius" Value="8"/>
    </Style>
    
    <Style Selector="Border.radius-large-top">
        <Setter Property="CornerRadius" Value="8,8,0,0"/>
    </Style>
    
    <Style Selector="Border.radius-large-bottom">
        <Setter Property="CornerRadius" Value="0,0,8,8"/>
    </Style>

    <!-- ========================================== -->
    <!-- MARGIN STYLES                              -->
    <!-- ========================================== -->
    
    <!-- None -->
    <Style Selector=":is(Control).margin-none">
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- Uniform margins -->
    <Style Selector=":is(Control).margin-tiny">
        <Setter Property="Margin" Value="2"/>
    </Style>
    
    <Style Selector=":is(Control).margin-small">
        <Setter Property="Margin" Value="4"/>
    </Style>
    
    <Style Selector=":is(Control).margin-medium">
        <Setter Property="Margin" Value="8"/>
    </Style>
    
    <Style Selector=":is(Control).margin-large">
        <Setter Property="Margin" Value="12"/>
    </Style>
    
    <Style Selector=":is(Control).margin-xlarge">
        <Setter Property="Margin" Value="16"/>
    </Style>

    <!-- Horizontal margins only -->
    <Style Selector=":is(Control).margin-h-tiny">
        <Setter Property="Margin" Value="2,0"/>
    </Style>
    
    <Style Selector=":is(Control).margin-h-small">
        <Setter Property="Margin" Value="4,0"/>
    </Style>
    
    <Style Selector=":is(Control).margin-h-medium">
        <Setter Property="Margin" Value="8,0"/>
    </Style>
    
    <Style Selector=":is(Control).margin-h-large">
        <Setter Property="Margin" Value="12,0"/>
    </Style>

    <!-- Vertical margins only -->
    <Style Selector=":is(Control).margin-v-tiny">
        <Setter Property="Margin" Value="0,2"/>
    </Style>
    
    <Style Selector=":is(Control).margin-v-small">
        <Setter Property="Margin" Value="0,4"/>
    </Style>
    
    <Style Selector=":is(Control).margin-v-medium">
        <Setter Property="Margin" Value="0,8"/>
    </Style>
    
    <Style Selector=":is(Control).margin-v-large">
        <Setter Property="Margin" Value="0,12"/>
    </Style>

    <!-- Top margin only -->
    <Style Selector=":is(Control).margin-top-tiny">
        <Setter Property="Margin" Value="0,2,0,0"/>
    </Style>
    
    <Style Selector=":is(Control).margin-top-small">
        <Setter Property="Margin" Value="0,4,0,0"/>
    </Style>
    
    <Style Selector=":is(Control).margin-top-medium">
        <Setter Property="Margin" Value="0,8,0,0"/>
    </Style>
    
    <Style Selector=":is(Control).margin-top-large">
        <Setter Property="Margin" Value="0,12,0,0"/>
    </Style>

    <Style Selector=":is(Control).margin-top-xlarge">
        <Setter Property="Margin" Value="0,20,0,0"/>
    </Style>

    <!-- Bottom margin only -->
    <Style Selector=":is(Control).margin-bottom-tiny">
        <Setter Property="Margin" Value="0,0,0,2"/>
    </Style>
    
    <Style Selector=":is(Control).margin-bottom-small">
        <Setter Property="Margin" Value="0,0,0,4"/>
    </Style>
    
    <Style Selector=":is(Control).margin-bottom-medium">
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>
    
    <Style Selector=":is(Control).margin-bottom-large">
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- Left margin only -->
    <Style Selector=":is(Control).margin-left-small">
        <Setter Property="Margin" Value="4,0,0,0"/>
    </Style>
    
    <Style Selector=":is(Control).margin-left-medium">
        <Setter Property="Margin" Value="8,0,0,0"/>
    </Style>

    <!-- Right margin only -->
    <Style Selector=":is(Control).margin-right-small">
        <Setter Property="Margin" Value="0,0,4,0"/>
    </Style>
    
    <Style Selector=":is(Control).margin-right-medium">
        <Setter Property="Margin" Value="0,0,8,0"/>
    </Style>

</Styles>
